<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.leetcodeapp.view.test.MyImageView
        android:id="@+id/id_img"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/ic_launcher_foreground"></com.github.leetcodeapp.view.test.MyImageView>
    <com.github.leetcodeapp.view.test.MyButton
        android:layout_marginTop="20dp"
        android:id="@+id/id_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"></com.github.leetcodeapp.view.test.MyButton>
</LinearLayout>